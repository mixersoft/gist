using Nemerle.Collections;
using Nemerle.Utility;

[ Record ]
class MockTask : ITask
{
	public Name : string;

	private itemMap : list[list[string] * list[string]];
	private items   : Hashtable[string, ITaskItem];

	public MapItems(items : list[ITaskItem]) : list[TaskMapping]
	{
		def CreateMapping(i, o)
		{
			def i = i.Map(name => items.Find(item => item.Name == name).Value);
			def o = o.Map(name => this.items[name]);
			TaskMapping
				( inputs  = i
				, outputs = o
				, compute = () => Compute(o)
				);
		}
		itemMap.Map(CreateMapping);
	}

	private Compute(outputs : list[ITaskItem]) : void
	{
		foreach (output is MockTaskItem in outputs)
			output.Compute();
	}
}
